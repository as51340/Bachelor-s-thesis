package hr.fer.zemris.bachelor.thesis.evaluator;

/**
 * Coefficients used in genetic algorithm
 * @author andi
 *
 */
public class Coefficients {
	
	/**
	 * Nothing on output
	 */
	public static double OUTPUT_BLACK_LABEL = -30.25;
	
	/**
	 * CLB not connected correctly
	 */
	public static double OUTPUT_PENALTY = -6.5;
	
	/**
	 * What is connected on output pin
	 */
	public static double OUTPUT_WRONG_TYPE = -20.25;
	
	/**
	 * Input not okay
	 */
	public static double INPUT_PENALTY = -6.75;
	
	/**
	 * Output pin on input
	 */
	public static double INPUT_WRONG_PIN_TYPE = -17.75;
	
	/**
	 * If we expect clb and get pin or viceversa
	 */	
	public static double INPUT_WRONG_TYPE = -20.25;
	
	/**
	 * More than one same input occurrs
	 */
	public static double INPUT_MULTIPLES = -12.25; // izbaci iz lokalnog optimuma
	
	/**
	 * More than one label on some segment
	 */
	public static double COLLISION_PENALTY = -30.0;	
	
	/**
	 * Nothing is connected
	 */
	public static double BLACK_LABEL = -25.0;
		
	/**
	 * If more than SW_BOX_CONNECTIONS_MAX in the box
	 */
	public static double SW_BOX_MAX_OVERFLOW_PENALTY = -3.5;
	
	/**
	 * If there are more connections from one wire to one group
	 */
	public static double MULTIPLE_VALUES = -3.5;
	
	/**
	 * If wire from switch box is connected to wire that has label null
	 */
	public static double SW_WIRE_TO_NULL = -.5;
	
	/**
	 * Switch box empty
	 */
	public static double SW_EMPTY = -3.5;
	
	/**
	 * Input pin isn't propagated 
	 */
	public static double INPUT_TO_NOWHERE = -12.75;
	
	/**
	 * Output is not propagated - punish only if needs to be punished
	 */
	public static double OUTPUT_TO_NOWHERE = -12.75;
	
	/**
	 * Max connections in one switch box: model based estimation
	 * @param wiresCount
	 * @return
	 */
	public static int getMaxConnections(int wiresCount) {
		return 3;
	}
	
	

}
